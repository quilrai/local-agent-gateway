{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LLMwatcher",
  "version": "0.1.0",
  "identifier": "ai.quilr.llmwatcher",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "LLMwatcher",
        "width": 800,
        "height": 600,
        "visible": true
      },
      {
        "label": "tray_popup",
        "title": "LLMwatcher",
        "url": "tray.html",
        "width": 320,
        "height": 420,
        "visible": false,
        "decorations": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "resizable": false,
        "focus": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
